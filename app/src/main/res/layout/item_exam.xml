<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/layout_round"
    android:padding="5dp">

    <ImageView
        android:id="@+id/image_left"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:padding="5dp"
        android:src="@drawable/icon_exam" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/ptsansnarrowregular"
            android:gravity="center|left"
            android:padding="3dp"
            android:singleLine="true"
            android:text="Đề số 1"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/ptsansnarrowregular"
            android:gravity="center|left"
            android:padding="3dp"
            android:singleLine="true"
            android:text="25 câu/19 phút"
            android:textColor="@color/gray"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_exam_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/round_button_primary"
        android:fontFamily="@font/ptsansnarrowbold"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:text="Làm bài"
        android:textAllCaps="true"
        android:textColor="@color/white" />

</LinearLayout>