<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.activites.LearningTheoryActivity">

    <com.example.drivinglicence.component.toolbar.ToolBarApp
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:drawable_start="@drawable/icon_back_left"
         />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_learning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:listitem="@layout/item_learning" />

</LinearLayout>